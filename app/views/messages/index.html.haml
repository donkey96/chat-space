
.wrapper
  = render 'shared/chat-side'
  .chat-main
    .main-header
      .main-header__left-box
        .main-header__left-box__current-group 
          = @group.name
        .main-header__left-box__member-list
          Members: 
          - @group.users.each do |user|
            = user.name
      .main-header__edit-btn 
        = link_to edit_group_path(@group), class: "edit-btn" do
          Edit
    .messages
      = render @messages
    .form
      = form_for [@group, @message] do |f|
        .new-message
          .input-box
            = f.text_field :body, class: "input-box__text", placeholder: "type a message"
            = f.label :image, class: "input-box__image" do
              = fa_icon 'image'
              = f.file_field :image, class: "input-box__image__file"
          = f.submit 'Send', class: "submit-btn"
